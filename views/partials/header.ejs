<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>blank_space</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
</head>
  <body>
    <div class="brandbox">
      <div class="brand_logo">blank_space</div>
      <form action="/search" class="searchbar" method="post">
        <a href="#" class="icon"><i class="bi bi-search"></i></a>
        <input type="text" id="search" name="search">
      </form>
    </div>
    <div class="brandbox_padding"></div>
    <nav class="navigation">
      <div class="nav_toggle"></div>
        <div class="profile">
        </div>
          <ul class="menu">
            <li id="home">
              <a href="/">
                <span class="icon"><i class="bi bi-house"></i></span>
                <span class="text">Home</span>
              </a>
            </li>
            <% if(userStatus===false){ %>
              <li id="login">
                <a href="/login">
                  <span class="icon"><i class="bi bi-box-arrow-in-right"></i></span>
                  <span class="text">Login</span>
                </a>
              </li>
              <li id="login">
                <a href="/register">
                  <span class="icon"><i class="bi bi-person-plus-fill"></i></span>
                  <span class="text">Register</span>
                </a>
              </li>
            <%}%>
  
            <% if(userStatus===true){%>
              <li id="posts">
                <a href="/myPosts">
                  <span class="icon"><i class="bi bi-stickies-fill"></i></i></span>
                  <span class="text">Posts</span>
                </a>
              </li>
              <li id="logout">
                <a href="/logout">
                  <span class="icon"><i class="bi bi-box-arrow-left"></i></i></span>
                  <span class="text">Logout</span>
                </a>
              </li>
            <%}%>
          </ul>
    </nav>
    <script>
      const nav_toggle = document.querySelector('.nav_toggle');
      const navigation = document.querySelector('.navigation');
      nav_toggle.onclick = function(){
        navigation.classList.toggle('active');
      }
    </script>
    <div class="container">